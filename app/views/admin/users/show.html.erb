<h1>ユーザー詳細</h1>
<%= link_to 'ユーザー登録', new_admin_user_path ,class: "btn btn-default "%>
<table class = "table table-hover">
  <tr>
    <th><%= t("activerecord.models.created_at")  %></th>
    <th><%= t("activerecord.models.priority") %></th>
    <th><%= t("activerecord.models.title") %></th>
    <th><%= t("activerecord.models.content") %></th>
    <th><%= t("activerecord.models.deadline") %></th>
    <th><%= t("activerecord.models.status") %></th>
  </tr>
  <% @tasks.each do |task| %>
    <br>
    <tr>
    <td class="task-item_createdAt" ><%= task.created_at.to_s(:published_on) %></td>
    <td><%= task.priority %></td>
    <td class="task-item__title" >
      <%= task.title %>
    </td>
    <td class="task-item__content"><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.status%></td>
    </tr>
    <% end %>
</table>
  <br>
  <%= paginate @tasks %>